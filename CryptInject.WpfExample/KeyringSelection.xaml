<Window x:Class="CryptInject.WpfExample.KeyringSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Open Keyring" Height="250" Width="490">
    <DockPanel Margin="8 4 8 8">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" Height="40">
            <Button Margin="6 5" Padding="3" Width="145" Click="Import_Partial_Keyring_Click">Import Partial Keyring</Button>
            <Button Margin="6 5" Padding="3" Width="145" Click="Generate_Sample_Keyring_Click">Generate Sample Keyring</Button>
            <Button Margin="6 5" Padding="3" Width="145" Click="Clear_Keyring_Click">Clear Keyring</Button>
        </StackPanel>
        <TreeView Name="keyringTree">
            <TreeViewItem IsEnabled="false">No keys loaded</TreeViewItem>
        </TreeView>
    </DockPanel>
</Window>
